<Window x:Class="WpfApp1.SingleplayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="SingleplayerWindow" Height="450" Width="800" KeyDown="Window_KeyDown" Loaded="Window_Loaded" >

    <Grid>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="800"/>
        <Grid x:Name="myGrid" HorizontalAlignment="Right" Height="100" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
